@model MyCvProject.Models.Entity.myExperiences
@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Deneyim Ekle</h2>
<br />

<form method="post">
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.title, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.title, "", new { @style = "color:red" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.subtitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.subtitle, "", new { @style = "color:red" })
    <br />
    @Html.Label("İş Tanımı")
    @Html.TextBoxFor(x => x.description, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.description, "", new { @style = "color:red" })
    <br />

    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.date, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.date, "", new { @style = "color:red" })
    <br />
    <br />
    <button class="btn btn-info">Yeni Deneyim Ekle</button>
</form>


